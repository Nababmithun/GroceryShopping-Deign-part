<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.androidlime.groceryshopping.Main2Activity">


    <LinearLayout

        android:background="#263238"
        android:textColor="#F0F4C3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView

            android:layout_marginLeft="30dp"
            android:src="@drawable/fffff"
            android:layout_width="50dp"
            android:layout_height="29dp" />

        <TextView
            android:textColor="#F0F4C3"
            android:textSize="25dp"
            android:text="Grocery Shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />"

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:textSize="29dp"
        android:textStyle="bold"
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">


       <TextView
           android:textStyle="bold"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="15dp"
           android:textSize="25dp"
           android:text="First Name :"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <EditText

           android:layout_marginLeft="19dp"
           android:layout_marginTop="15dp"
           android:textSize="20dp"
           android:hint="Enter your first Name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />



   </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="Middle Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText

            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:hint="Enter your middle Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="Last Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText

            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:hint="Enter your last Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="Gender :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

     <CheckBox
         android:layout_marginTop="15dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="Female "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="E-mail :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText

            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:hint="Enter your E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="Contract :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText

            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:hint="Enter your contract number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="Adrees :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText

            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:hint="Enter your adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <Button
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="Register"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />



</LinearLayout>


