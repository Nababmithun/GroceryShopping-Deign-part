<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.androidlime.groceryshopping.Main5Activity">
    <LinearLayout

        android:background="#263238"
        android:textColor="#F0F4C3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView

            android:layout_marginLeft="30dp"
            android:src="@drawable/fffff"
            android:layout_width="50dp"
            android:layout_height="29dp" />

        <TextView
            android:textColor="#F0F4C3"
            android:textSize="25dp"
            android:text="Grocery Shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />"

    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Contact Us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <ImageView
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_width="200dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="Home Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:text="Digital Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:text="LandLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:text="Wireless Home Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="Desgin Part by Mithun Kumar"
            android:background="#F4FF81"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
